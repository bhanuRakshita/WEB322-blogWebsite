<div class="row">
    <div class="col-md-12">
        <h2>
            Posts
            <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
        </h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <th>Post ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Published</th>
                    <th></th>
                </thead>

                <tbody>
                    {{#each posts}}
                        {{!-- <p>{{title}}</p> --}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{title}}</td>
                            <td>{{postDate}}</td>
                            <td><a href="/posts?category={{category}}">{{category}}</a></td>
                            <td>{{published}}</td>
                            <td><a class="btn btn-danger" href="post/delete/{{id}}">Remove</a></td>
                        </tr>

        
                    {{else}}
                        <tr>
                            <td><strong></strong>{{message}}</strong></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>
